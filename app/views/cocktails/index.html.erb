<div class="banner" style="background-image: url(https://images.pexels.com/photos/2789328/pexels-photo-2789328.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=750&w=1260)">
  <div class="container">
    <h1>Welcome on your favorite cocktail app!</h1>
    <%= link_to "New cocktail", new_cocktail_path, class:"btn btn-dark" %>
  </div>
</div>


<div class="container">
  <h2 class="text-center">List of your favorite cocktails</h2>
    <div class="row">
      <div class="col-lg-12">
        <div class="cards">
        <% @cocktails.each do |cocktail| %>
          <div class="card">
          <h3><%= cocktail.name %></h3>
          <%= link_to "See more details", cocktail_path(cocktail), class:"btn btn-secondary" %>
          <%= link_to  "Delete", cocktail_path(cocktail), method: :delete, data: {confirm: "Are you sure"}  %>
          </div>
        <% end %>
        </div>
      </div>
    </div>
</div>




